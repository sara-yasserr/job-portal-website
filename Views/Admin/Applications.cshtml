@model List<Job_Portal_Project.Models.JobApplication>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Job Applications";
}

<div class="content">
    <h2 class="mb-4">Job Applications</h2>

    <!-- Search Form -->
    <form method="get" asp-action="Applications" class="row g-2 mb-4">
        <div class="col-md-6">
            <input type="text" name="searchTerm" class="form-control" placeholder="Search by applicant's full name..." value="@ViewData["SearchTerm"]" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
        <div class="col-md-3">
            <a asp-action="Applications" class="btn btn-secondary w-100">Reset</a>
        </div>
    </form>

    <!-- No Results Message -->
    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">No applications found matching your criteria.</div>
    }

    <!-- Applications Table -->
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Applicant</th>
                        <th>Job Title</th>
                        <th>Company</th>
                        <th>Status</th>
                        <th>Applied On</th>
                        <th>Resume</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in Model)
                    {
                        <tr>
                            <td>@app.Id</td>
                            <td>
                                <a class="text-decoration-none fw-semibold text-primary" href="@Url.Action("UserDetails", "Admin", new { id = app.Applicant?.Id })" title="View Applicant Profile">
                                    @app.Applicant?.FirstName @app.Applicant?.LastName
                                </a>
                            </td>
                            <td>@app.Job?.Title</td>
                            <td>@app.Job?.Company?.Name</td>
                            <td>
                                @switch (app.Status)
                                {
                                    case "Pending":
                                        <span class="badge bg-warning text-dark">Pending</span>
                                        break;
                                    case "Accepted":
                                        <span class="badge bg-success">Accepted</span>
                                        break;
                                    case "Rejected":
                                        <span class="badge bg-danger">Rejected</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@app.Status</span>
                                        break;
                                }
                            </td>
                            <td>@app.ApplicationDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(app.SpecificResumePath))
                                {
                                    <a class="btn btn-sm btn-outline-info" href="@Url.Content(app.SpecificResumePath)" target="_blank" title="Open resume in new tab">View</a>
                                }
                                else
                                {
                                    <span class="text-muted">No Resume</span>
                                }
                            </td>
                            <td>
                                <form asp-action="DeleteApplication" method="post" asp-route-id="@app.Id" onsubmit="return confirm('Are you sure you want to delete this application?');">
                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete this application">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <!-- Pagination -->
    @if (true)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-4">
                <li class="page-item @( (int)ViewData["CurrentPage"] == 1 ? "disabled" : "")">
                    <a class="page-link" href="?searchTerm=@ViewData["SearchTerm"]&page=@((int)ViewData["CurrentPage"] - 1)">«</a>
                </li>
                @for (int i = 1; i <= (int)ViewData["TotalPages"]; i++)
                {
                    <li class="page-item @(i == (int)ViewData["CurrentPage"] ? "active" : "")">
                        <a class="page-link" href="?searchTerm=@ViewData["SearchTerm"]&page=@i">@i</a>
                    </li>
                }
                <li class="page-item @( (int)ViewData["CurrentPage"] == (int)ViewData["TotalPages"] ? "disabled" : "")">
                    <a class="page-link" href="?searchTerm=@ViewData["SearchTerm"]&page=@((int)ViewData["CurrentPage"] + 1)">»</a>
                </li>
            </ul>
        </nav>
    }
</div>
<style>
    /* Main content styling */
    .content {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    /* Page header */
    h2 {
        color: #2c3e50;
        font-weight: 700;
        position: relative;
        padding-bottom: 1rem;
        margin-bottom: 2rem;
    }

        h2:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 80px;
            height: 4px;
            background: linear-gradient(90deg, #3498db, #9b59b6);
            border-radius: 2px;
        }

    /* Search form styling */
    .form-control {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        border: 1px solid #dfe6e9;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
        }

    /* Button styling */
    .btn {
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        transition: all 0.3s;
        border: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #3498db, #2980b9);
        box-shadow: 0 4px 6px rgba(52, 152, 219, 0.3);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #2980b9, #3498db);
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(52, 152, 219, 0.4);
        }

    .btn-secondary {
        background: linear-gradient(135deg, #95a5a6, #7f8c8d);
        box-shadow: 0 4px 6px rgba(149, 165, 166, 0.3);
    }

        .btn-secondary:hover {
            background: linear-gradient(135deg, #7f8c8d, #95a5a6);
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(149, 165, 166, 0.4);
        }

    /* Table styling */
    .table {
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 0;
    }

    .table-dark {
        background: linear-gradient(135deg, #2c3e50, #34495e);
    }

    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        border-bottom: none;
    }

    .table td, .table th {
        padding: 1rem;
        vertical-align: middle;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(52, 152, 219, 0.05);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(52, 152, 219, 0.1);
    }

    /* Badge styling */
    .badge {
        font-weight: 600;
        padding: 0.5em 0.75em;
        border-radius: 8px;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .bg-warning {
        background-color: #f39c12 !important;
    }

    /* Action buttons */
    .btn-sm {
        padding: 0.5rem 1rem;
        font-size: 0.85rem;
        border-radius: 6px;
    }

    .btn-outline-info {
        border-color: #3498db;
        color: #3498db;
    }

        .btn-outline-info:hover {
            background-color: #3498db;
            color: white;
        }

    .btn-danger {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        box-shadow: 0 4px 6px rgba(231, 76, 60, 0.3);
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #c0392b, #e74c3c);
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(231, 76, 60, 0.4);
        }

    /* Pagination */
    .pagination {
        margin-top: 2rem;
    }

    .page-link {
        border: none;
        color: #7f8c8d;
        font-weight: 600;
        margin: 0 5px;
        border-radius: 8px !important;
        transition: all 0.3s;
    }

        .page-link:hover {
            color: #3498db;
            background-color: #f8f9fa;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

    .page-item.active .page-link {
        background: linear-gradient(135deg, #3498db, #9b59b6);
        border: none;
        box-shadow: 0 4px 8px rgba(52, 152, 219, 0.3);
    }

    /* Alert message */
    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeeba;
        color: #856404;
        border-radius: 8px;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .content {
            padding: 1rem;
        }

        .table-responsive {
            border-radius: 8px;
            border: 1px solid #dee2e6;
        }

        .btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }
    }

    /* Animation for table rows */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    tbody tr {
        animation: fadeIn 0.3s ease forwards;
        opacity: 0;
    }

        /* Delay animations for each row */
        tbody tr:nth-child(1) {
            animation-delay: 0.1s;
        }

        tbody tr:nth-child(2) {
            animation-delay: 0.2s;
        }

        tbody tr:nth-child(3) {
            animation-delay: 0.3s;
        }

        tbody tr:nth-child(4) {
            animation-delay: 0.4s;
        }

        tbody tr:nth-child(5) {
            animation-delay: 0.5s;
        }

        tbody tr:nth-child(6) {
            animation-delay: 0.6s;
        }
</style>