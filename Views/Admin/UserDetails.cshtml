@model Job_Portal_Project.Models.ApplicationUser
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "User Details";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-color: #4361ee;
        --primary-dark: #3a56d4;
        --secondary-color: #3f37c9;
        --accent-color: #4895ef;
        --success-color: #4cc9f0;
        --warning-color: #f8961e;
        --danger-color: #f94144;
        --light-color: #f8f9fa;
        --dark-color: #212529;
        --gray-light: #e9ecef;
        --gray-medium: #adb5bd;
        --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f5f7fb;
    }

    .breadcrumb {
        background-color: transparent;
        padding: 0.75rem 0;
        font-size: 0.9rem;
    }

    .breadcrumb-item a {
        color: var(--primary-color);
        text-decoration: none;
        transition: var(--transition);
    }

        .breadcrumb-item a:hover {
            color: var(--primary-dark);
            text-decoration: underline;
        }

    .user-card {
        border: none;
        border-radius: 12px;
        box-shadow: var(--card-shadow);
        overflow: hidden;
    }

    .user-header {
        display: flex;
        align-items: center;
        padding: 1.5rem;
        border-bottom: 1px solid var(--gray-light);
    }

    .user-avatar {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid white;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .user-actions {
        margin-left: auto;
        display: flex;
        gap: 0.75rem;
    }

    .btn {
        border-radius: 8px;
        font-weight: 500;
        padding: 0.5rem 1.25rem;
        transition: var(--transition);
    }

    .btn-warning {
        background-color: var(--warning-color);
        border-color: var(--warning-color);
        color: white;
    }

        .btn-warning:hover {
            background-color: #e68a19;
            border-color: #da8318;
            transform: translateY(-1px);
        }

    .btn-danger {
        background-color: var(--danger-color);
        border-color: var(--danger-color);
    }

        .btn-danger:hover {
            background-color: #e03546;
            border-color: #d62f40;
            transform: translateY(-1px);
        }

    .nav-tabs {
        border-bottom: 1px solid var(--gray-light);
        padding: 0 1.5rem;
    }

    .nav-link {
        color: var(--gray-medium);
        font-weight: 500;
        border: none;
        padding: 0.75rem 1.25rem;
        position: relative;
        transition: var(--transition);
    }

        .nav-link:hover {
            color: var(--primary-color);
        }

        .nav-link.active {
            color: var(--primary-color);
            background-color: transparent;
        }

            .nav-link.active::after {
                content: '';
                position: absolute;
                bottom: -1px;
                left: 0;
                width: 100%;
                height: 3px;
                background-color: var(--primary-color);
                border-radius: 3px 3px 0 0;
            }

    .tab-content {
        padding: 1.5rem;
    }

    .user-info h3 {
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 1.5rem;
    }

    .info-item {
        display: flex;
        margin-bottom: 1rem;
        align-items: center;
    }

    .info-label {
        font-weight: 500;
        color: var(--dark-color);
        min-width: 120px;
    }

    .info-value {
        color: var(--gray-medium);
    }

    .badge {
        padding: 0.35em 0.65em;
        font-weight: 500;
        border-radius: 20px;
    }

    .bg-success {
        background-color: var(--success-color) !important;
    }

    .bg-info {
        background-color: var(--accent-color) !important;
    }

    .resume-container {
        border-radius: 8px;
        border: 1px solid var(--gray-light);
        overflow: hidden;
        height: 500px;
    }

    .empty-resume {
        text-align: center;
        padding: 2rem;
        color: var(--gray-medium);
    }

        .empty-resume i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: var(--gray-light);
        }

    .disabled-tab {
        cursor: not-allowed;
    }
</style>

<div class="container py-4">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Users"><i class="fas fa-arrow-left me-2"></i>Back to Users</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                @Model.FirstName @Model.LastName
            </li>
        </ol>
    </nav>

    <!-- Main User Card -->
    <div class="card user-card">
        <!-- User Header Section -->
        <div class="user-header">
            <div>
                <img src="@(Model.ProfilePicturePath ?? "https://via.placeholder.com/150")"
                     class="user-avatar"
                     alt="User Image"
                     onerror="this.src='https://via.placeholder.com/150'" />
            </div>
            <div class="user-actions">
                <a asp-action="EditUser" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Edit Profile
                </a>
                <a href="javascript:history.back()" class="btn btn-danger">
                    <i class="fas fa-times me-2"></i>Close
                </a>
            </div>
        </div>

        <!-- Tab Navigation -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="basic-tab" data-bs-toggle="tab" data-bs-target="#basic" type="button" role="tab">
                    <i class="fas fa-user-circle me-2"></i>Basic Info
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link @(Model.Role == "Employer" || Model.Role == "Admin" ? "disabled-tab" : "")"
                        id="resume-tab"
                        data-bs-toggle="tab"
                        data-bs-target="#resume"
                        type="button"
                        role="tab"
                @(Model.Role == "Employer" || Model.Role == "Admin" ? "disabled" : "")>
                    <i class="fas fa-file-alt me-2"></i>Resume
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content">
            <!-- Basic Info Tab -->
            <div class="tab-pane fade show active" id="basic" role="tabpanel">
                <div class="user-info">
                    <h3>
                        @Model.FirstName @Model.LastName
                        <span class="badge @(Model.Role == "Employer" ? "bg-success" : "bg-info") ms-2">
                            @Model.Role
                        </span>
                    </h3>

                    <div class="info-item">
                        <span class="info-label"><i class="fas fa-envelope me-2"></i>Email:</span>
                        <span class="info-value">@Model.Email</span>
                    </div>

                    <div class="info-item">
                        <span class="info-label"><i class="fas fa-map-marker-alt me-2"></i>Location:</span>
                        <span class="info-value">
                            @if (!string.IsNullOrEmpty(Model.City) && !string.IsNullOrEmpty(Model.Country))
                            {
                                @($"{Model.City}, {Model.Country}")
                            }
                            else if (!string.IsNullOrEmpty(Model.City))
                            {
                                @Model.City
                            }
                            else if (!string.IsNullOrEmpty(Model.Country))
                            {
                                @Model.Country
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Title))
                    {
                        <div class="info-item">
                            <span class="info-label"><i class="fas fa-briefcase me-2"></i>Title:</span>
                            <span class="info-value">@Model.Title</span>
                        </div>
                    }

                    
                </div>
            </div>

            <!-- Resume Tab -->
            <div class="tab-pane fade" id="resume" role="tabpanel">
                @if (Model.Role == "Employer" || Model.Role == "Admin")
                {
                    <div class="empty-resume">
                        <i class="fas fa-ban"></i>
                        <h4>Resume Not Available</h4>
                        <p>This user role doesn't typically have a resume.</p>
                    </div>
                }
                else if (!string.IsNullOrEmpty(Model.ResumePath))
                {
                    <div class="resume-container">
                        <iframe src="@Url.Content(Model.ResumePath)" width="100%" height="100%" style="border: none;"></iframe>
                    </div>
                    <div class="mt-3 text-center">
                        <a href="@Url.Content(Model.ResumePath)" class="btn btn-primary" download>
                            <i class="fas fa-download me-2"></i>Download Resume
                        </a>
                    </div>
                }
                else
                {
                    <div class="empty-resume">
                        <i class="fas fa-file-import"></i>
                        <h4>No Resume Uploaded</h4>
                        <p>This user hasn't uploaded a resume yet.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>