@model Job_Portal_Project.Models.Company

@{
    ViewData["Title"] = "Edit Company";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Edit Company</h2>

    @if (TempData["CompanyError"] != null)
    {
        <div class="alert alert-danger text-center mt-3">
            @TempData["CompanyError"]
        </div>
    }

    @if (TempData["CompanySuccess"] != null)
    {
        <div class="alert alert-success text-center mt-3">
            @TempData["CompanySuccess"]
        </div>
    }

    <form asp-action="EditCompany" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label">Company Name *</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Country" class="form-label">Country *</label>
                <input asp-for="Country" class="form-control" required />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="City" class="form-label">City *</label>
                <input asp-for="City" class="form-control" required />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Change Logo (optional)</label>
                <input type="file" name="logoFile" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.LogoPath))
                {
                    <div class="mt-2">
                        <img src="@Url.Content($"~/uploads/logos/{Model.LogoPath}")"
                             alt="Current Logo"
                             width="100"
                             height="100"
                             class="rounded-circle border" />
                    </div>
                }
            </div>

            <div class="col-12">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Companies" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}