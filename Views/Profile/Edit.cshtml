@model Job_Portal_Project.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Profile Edit";
}

<div class="container py-4" style="margin-top: 80px;">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm mb-4">
                <div class="card-header py-3" style="background-color: #00BCD4;">
                    <h4 class="mb-0 text-white">Edit Profile</h4>
                </div>
                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Edit" asp-controller="Profile" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ProfilePicturePath" />

                        <div class="row mb-4">
                            <div class="col-12 text-center">
                                <div class="position-relative d-inline-block">
                                    @* @if (string.IsNullOrEmpty(Model.ProfilePicturePath)) *@
                                    @* { *@
                                        <img src="/images/@Model.ProfilePicturePath" alt="Profile Picture"
                                             class="rounded-circle img-thumbnail mb-3"
                                             style="width: 160px; height: 160px; object-fit: cover;">
                                    @* } *@
                                    @* else *@
                                    @* { *@
                                    @*     <img src="/assets/img/profile.jpg" alt="Default Profile" *@
                                    @*          class="rounded-circle img-thumbnail mb-3" *@
                                    @*          style="width: 160px; height: 160px; object-fit: cover;"> *@
                                    @* } *@
                                </div>
                                <div class="mt-3">
                                    <label asp-for="ProfilePicture" class="form-label" style="color: #00BCD4;">Update Profile Picture (Optional)</label>
                                    <input asp-for="ProfilePicture" type="file" class="form-control" accept="image/*" />
                                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label" style="color: #00BCD4;">First Name</label>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label" style="color: #00BCD4;">Last Name</label>
                                <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label" style="color: #00BCD4;">Job Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter your job title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label" style="color: #00BCD4;">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label" style="color: #00BCD4;">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="City" class="form-label" style="color: #00BCD4;">City</label>
                            <input asp-for="City" class="form-control" placeholder="Enter your city" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Country" class="form-label" style="color: #00BCD4;">Country</label>
                            <input asp-for="Country" class="form-control" placeholder="Enter your country" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn" style="background-color: #f8f9fa; color: #00BCD4; border: 1px solid #00BCD4;">
                                <i class="fas fa-arrow-left me-2"></i>Back to Profile
                            </a>
                            <button type="submit" class="btn text-white" style="background-color: #00BCD4;">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
