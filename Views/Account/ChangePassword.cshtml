@model Job_Portal_Project.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<!-- Page Header Start -->
<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-header">
                    <h3>Change Password</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Content Section Start -->
<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-8 col-xs-12">
                <div class="page-login-form box">
                    <div class="section-header text-center">
                        <h3 class="section-title">Change Password</h3>
                        <p>Please fill in the form below to update your password</p>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <form asp-action="ChangePassword" asp-controller="Account" method="post" class="login-form">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-lock"></i>
                                <input asp-for="CurrentPassword" class="form-control" placeholder="Current Password">
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-lock"></i>
                                <input asp-for="NewPassword" class="form-control" placeholder="New Password">
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-lock"></i>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm New Password">
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <div class="password-strength">
                                <h6>Password Strength: <span id="strength-text">None</span></h6>
                                <div class="progress" style="height: 5px;">
                                    <div id="password-strength-meter" class="progress-bar" role="progressbar" style="width: 0%;"
                                         aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-common log-btn mt-3" type="submit">Update Password</button>
                        <a class="btn btn-light log-btn mt-3 ml-3" asp-controller="Home" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Content Section End -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            $('#NewPassword').on('input', function() {
                var password = $(this).val();
                var strength = 0;

                if (password.length >= 8) strength += 25;
                if (password.match(/[a-z]+/)) strength += 25;
                if (password.match(/[A-Z]+/)) strength += 25;
                if (password.match(/[0-9]+/) || password.match(/[^a-zA-Z0-9]+/)) strength += 25;

                var meter = $('#password-strength-meter');
                var text = $('#strength-text');

                meter.css('width', strength + '%');

                if (strength < 25) {
                    meter.removeClass().addClass('progress-bar bg-danger');
                    text.text('Weak').removeClass().addClass('text-danger');
                } else if (strength < 50) {
                    meter.removeClass().addClass('progress-bar bg-warning');
                    text.text('Fair').removeClass().addClass('text-warning');
                } else if (strength < 75) {
                    meter.removeClass().addClass('progress-bar bg-info');
                    text.text('Good').removeClass().addClass('text-info');
                } else {
                    meter.removeClass().addClass('progress-bar bg-success');
                    text.text('Strong').removeClass().addClass('text-success');
                }
            });
        });
    </script>
}

@section Styles {
    <style>
        /* Page Header */
        .page-header {
            background: #1E88E5;
            padding: 40px 0;
            margin-bottom: 0;
        }

        .inner-header {
            text-align: center;
            color: #fff;
        }

            .inner-header h3 {
                font-size: 28px;
                font-weight: 600;
                margin-bottom: 0;
            }

        /* Form Box */
        .section {
            padding: 80px 0;
        }

        .box {
            background: #fff;
            border-radius: 4px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        .section-header {
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        /* Form Elements */
        .input-icon {
            position: relative;
        }

            .input-icon i {
                position: absolute;
                left: 15px;
                top: 13px;
                color: #aaa;
            }

            .input-icon input {
                padding-left: 40px;
                height: 45px;
            }

        /* Button Styles */
        .btn-common {
            background-color: #26ae61;
            border-color: #26ae61;
            color: #fff;
            border-radius: 4px;
            font-size: 14px;
            padding: 10px 24px;
            font-weight: 500;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }

            .btn-common:hover {
                background-color: #1e9954;
                border-color: #1e9954;
                color: #fff;
            }

        /* Other Elements */
        .form-group {
            margin-bottom: 20px;
        }

        .text-danger {
            font-size: 13px;
            margin-top: 5px;
            display: block;
        }

        /* Password Strength */
        .password-strength {
            margin-top: 10px;
        }

            .password-strength h6 {
                font-size: 14px;
                margin-bottom: 5px;
            }
    </style>
}
