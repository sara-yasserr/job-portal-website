@{
    ViewData["Title"] = "ResetPasswordConfirmation";
}

<div class="confirmation-container">
    <div class="confirmation-card animated fadeIn">
        <div class="confirmation-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#00BCD4">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
            </svg>
        </div>
        <h2 class="confirmation-title">Password Reset Successful!</h2>
        <div class="confirmation-message">
            <p>Your password has been successfully updated.</p>
            <p>You can now log in with your new password.</p>
        </div>
        <div class="confirmation-action">
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                Continue to Login
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="white" class="ml-2">
                    <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z" />
                </svg>
            </a>
        </div>
    </div>
</div>

<style>
    :root {
        --primary: #00BCD4;
        --primary-light: #80DEEA;
        --primary-dark: #0097A7;
        --white: #FFFFFF;
        --gray-light: #F5F7FA;
        --gray: #E0E0E0;
        --gray-dark: #666666;
        --dark: #333333;
    }

    body {
        font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
        background-attachment: fixed;
        color: var(--dark);
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Animations */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    @@keyframes bounceIn {
        0%

    {
        transform: scale(0.8);
        opacity: 0;
    }

    50% {
        transform: scale(1.05);
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }

    }

    .animated {
        animation-duration: 0.6s;
        animation-fill-mode: both;
    }

    .fadeIn {
        animation-name: fadeIn;
    }

    .bounceIn {
        animation-name: bounceIn;
    }

    /* Confirmation Container */
    .confirmation-container {
        width: 100%;
        max-width: 500px;
        padding: 20px;
    }

    .confirmation-card {
        background: var(--white);
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        padding: 40px;
        text-align: center;
        transition: all 0.3s ease;
    }

        .confirmation-card:hover {
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            transform: translateY(-2px);
        }

    /* Confirmation Icon */
    .confirmation-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        background-color: rgba(0, 188, 212, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .confirmation-icon svg {
            width: 40px;
            height: 40px;
        }

    /* Confirmation Title */
    .confirmation-title {
        color: var(--primary);
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    /* Confirmation Message */
    .confirmation-message {
        color: var(--gray-dark);
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 30px;
    }

        .confirmation-message p {
            margin: 0 0 10px;
        }

    /* Button Styles */
    .btn-primary {
        background-color: var(--primary);
        border-color: var(--primary);
        color: var(--white);
        font-weight: 500;
        padding: 12px 24px;
        border-radius: 25px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

    .ml-2 {
        margin-left: 8px;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add bounce animation to the icon
        const icon = document.querySelector('.confirmation-icon');
        if (icon) {
            setTimeout(() => {
                icon.classList.add('bounceIn');
            }, 100);
        }
    });
</script>