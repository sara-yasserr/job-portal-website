@model CompanyListViewModel

@{
    ViewData["Title"] = "All Companies";
}

<div class="container py-4">

    <h2 class="text-info text-center ">All Companies</h2>


    <form method="get" asp-action="AllCompany" class="my-4">
        <div class="row">
            <div class="col-md-3">
                <input type="text" name="name" class="form-control" placeholder="Filter by Name" value="@Model.NameFilter" />
            </div>
             <div class="col-md-3">
                <input type="text" name="city" class="form-control" placeholder="Filter by City" value="@Model.CityFilter" />
            </div>
            <div class="col-md-3">
                <input type="text" name="country" class="form-control" placeholder="Filter by Country" value="@Model.CountryFilter" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">Filter</button>
            </div>
        </div>
    </form>

    <div class="d-flex justify-content-center align-items-center" >
        <div class="table-responsive">
            <table class="table table-striped table-bordered text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Companies[0].Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Companies[0].Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Companies[0].Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Companies[0].City)</th>
                        <th>@Html.DisplayNameFor(model => model.Companies[0].Country)</th>
                        <th>@Html.DisplayNameFor(model => model.Companies[0].LogoPath)</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Companies)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.City</td>
                            <td>@item.Country</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.LogoPath))
                                {
                                    <img src="~/images/@item.LogoPath" alt="Logo" class="img-fluid rounded-circle shadow-sm" style="width:100px; height:100px; object-fit:cover;" />
                                }
                                else
                                {
                                    <span class="text-muted">No Logo</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-center align-items-center" style="margin-top: 15px;
">
        <ul class="pagination " style="justify-content:center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("AllCompany", new { page = Model.CurrentPage - 1 })">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link">Previous</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("AllCompany", new { page = i })">@i</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("AllCompany", new { page = Model.CurrentPage + 1 })">Next</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link">Next</a>
                </li>
            }
        </ul>
    </div>
</div>
