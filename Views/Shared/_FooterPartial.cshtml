    /* Back to top button */
    .back-to-top {
        opacity: 0;
        transition: all 0.3s ease;
        z-index: 99;
    }

        .back-to-top.show {
            opacity: 1;
        }

    /* Responsive adjustments */
    @@media (max-width: 767.98px) {
        .footer-links, .footer-subscribe {
            text-align: center;
        }

        .social-icons {
