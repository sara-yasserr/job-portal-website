<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    /* Navbar Styling */
    .navbar {
        background-color: #ffffff;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.06);
        padding: 10px 0;
        transition: all 0.3s ease;
    }

    /* Brand Logo */
    .navbar-brand {
        display: flex;
        align-items: center;
    }

    .logo-img {
        height: 42px; /* Increased from 38px */
        margin-right: 12px;
    }

    /* Toggle Button */
    .navbar-toggler {
        border: none;
        padding: 0.5rem 0.6rem;
        border-radius: 6px;
        background-color: #f8f9fa;
    }

        .navbar-toggler:focus {
            box-shadow: 0 0 0 3px rgba(0, 188, 212, 0.2);
        }

    /* Nav Links */
    .navbar-nav {
        align-items: center;
    }

    .nav-item {
        margin: 0 3px;
       
    }

    .nav-link {
        color: #6c757d; /* Darker gray */
        font-weight: 500;
        font-size: 16px; /* Added font size */
        padding: 10px 18px; /* Slightly larger padding */
        border-radius: 6px;
        transition: all 0.2s ease;
       
    }
    .nav-link{
        font-size:20px !important;
    }

        .nav-link:hover {
            color: #008c9e; /* Darker teal for hover */
            background-color: rgba(0, 188, 212, 0.08);
        }

        .nav-link.active {
            color: #008c9e; /* Darker teal for active */
            font-weight: 600;
        }

    /* User Profile Link with Image */
    .user-profile-link {
        display: flex;
        align-items: center;
        gap: 10px; /* Increased gap */
    }

    .profile-img-container {
        width: 36px; /* Increased from 30px */
        height: 36px; /* Increased from 30px */
        border-radius: 50%;
        overflow: hidden;
        border: 2px solid #008c9e; /* Darker teal */
    }

    .profile-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Dropdown Menu */
    .dropdown-menu {
        border: none;
        border-radius: 12px; /* Slightly larger radius */
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        padding: 10px; /* Increased padding */
        min-width: 220px; /* Slightly wider */
        margin-top: 12px;
        transform: translateY(0);
        animation: fadeIn 0.2s ease;
        margin-top: 0px;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Add scrollable feature for All Company dropdown */
    .scrollable-dropdown {
        max-height: 250px;
        overflow-y: auto;
    }

        /* Styled scrollbar for the dropdown */
        .scrollable-dropdown::-webkit-scrollbar {
            width: 6px;
        }

        .scrollable-dropdown::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }

        .scrollable-dropdown::-webkit-scrollbar-thumb {
            background: #008c9e; /* Darker teal */
            border-radius: 10px;
        }

            .scrollable-dropdown::-webkit-scrollbar-thumb:hover {
                background: #006972; /* Even darker teal */
            }

    .dropdown-item {
        border-radius: 6px;
        padding: 10px 16px; /* Slightly larger padding */
        font-weight: 500;
        font-size: 15px; /* Added font size */
        color: #444444; /* Darker gray */
        transition: all 0.2s ease;
    }

    /* Extra padding for Add Company section */
