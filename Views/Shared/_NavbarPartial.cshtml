<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    /* Navbar Styling */
    .navbar {
        background-color: rgba(255, 255, 255, 0.98);
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.06);
        padding: 15px 0;
        transition: all 0.3s ease;
    }

    /* Brand Logo */
    .navbar-brand {
        display: flex;
        align-items: center;
    }

    .logo-img {
        height: 38px;
        margin-right: 10px;
    }

    .brand-text {
        font-weight: 700;
        color: #00BCD4;
        font-size: 18px;
    }



    /* Toggle Button */
    .navbar-toggler {
        border: none;
        padding: 0.4rem 0.5rem;
        border-radius: 5px;
        background-color: #f8f9fa;
    }

        .navbar-toggler:focus {
            box-shadow: 0 0 0 3px rgba(0, 188, 212, 0.2);
        }

    /* Nav Links */
    .navbar-nav {
        align-items: center;
    }

    .nav-item {
        margin: 0 2px;
    }

    .nav-link {
        color: #555;
        font-weight: 500;
        padding: 8px 16px;
        border-radius: 6px;
        transition: all 0.2s ease;
    }

        .nav-link:hover {
            color: #00BCD4;
            background-color: rgba(0, 188, 212, 0.08);
        }

        .nav-link.active {
            color: #00BCD4;
            font-weight: 600;
        }

    /* Dropdown Menu */
    .dropdown-menu {
        border: none;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        padding: 8px;
        min-width: 200px;
        margin-top: 12px;
    }

    .dropdown-item {
        border-radius: 6px;
        padding: 8px 15px;
        font-weight: 500;
        color: #555;
        transition: all 0.2s ease;
    }

        .dropdown-item:hover {
            background-color: rgba(0, 188, 212, 0.08);
            color: #00BCD4;
        }

    .dropdown-divider {
        margin: 6px 0;
    }

    /* Register Button */
    .register-btn {
        background-color: #00BCD4;
        color: white;
        padding: 8px 20px;
        border-radius: 50px;
        font-weight: 500;
        display: inline-block;
        text-decoration: none;
        transition: all 0.3s ease;
        margin-left: 8px;
    }

        .register-btn:hover {
            background-color: #00acc1;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 188, 212, 0.25);
            color: white;
        }

    /* Account Icon */
    .bi-person-circle {
        margin-right: 6px;
    }

    /* Logout Link */
    .logout-link {
        color: #dc3545;
    }

        .logout-link:hover {
            background-color: rgba(220, 53, 69, 0.08);
            color: #dc3545;
        }

    /* Scrolled Navbar */
    .navbar.scrolled {
        padding: 10px 0;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    }

   
    
</style>

<script>
    // Add scroll behavior to navbar
    document.addEventListener('DOMContentLoaded', function() {
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
    });
</script>
