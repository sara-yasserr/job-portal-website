<div class="col-lg-2 col-md-12 col-xs-12">
    <div class="right-sideabr dashboard-sidebar">
        <h4 class="sidebar-title">Manage Account</h4>
        <ul class="list-item dashboard-menu">
            <li>
                <a href="/Profile" class="@(Context.Request.Path.Value.Contains("/Profile") ? "active" : "")">
                    <i class="fas fa-user"></i> Profile
                </a>
            </li>
            <li>
                <a href="/Resume/Index" class="@(Context.Request.Path.Value.Contains("/Resume") ? "active" : "")">
