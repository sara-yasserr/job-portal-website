@model Job_Portal_Project.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container mt-5">
    <div class="row">
        <!-- Resume Header -->
        <div class="col-12">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2">
                            @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                            {
                                <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="img-fluid rounded-circle" style="width: 120px; height: 120px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="/images/default-avatar.png" alt="Default Profile" class="img-fluid rounded-circle" style="width: 120px; height: 120px; object-fit: cover;">
                            }
                        </div>
                        <div class="col-md-10">
                            <h2 class="mb-1">@Model.FirstName @Model.LastName</h2>
                            <p class="text-muted mb-2">@Model.Title</p>
                            <div class="d-flex flex-wrap mb-3">
                                <span class="me-3"><i class="bi bi-geo-alt"></i> @Model.City, @Model.Country</span>
                                <span class="me-3"><i class="bi bi-envelope"></i> @Model.Email</span>
                                <span><i class="bi bi-telephone"></i> @Model.PhoneNumber</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3">
            <!-- Resume Sidebar -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Resume Options</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Index", "Profile")" class="text-decoration-none text-dark">
                                <i class="bi bi-person me-2"></i> My Profile
                            </a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center active">
                            <a href="@Url.Action("Index", "Resume")" class="text-decoration-none text-white">
                                <i class="bi bi-file-earmark-text me-2"></i> My Resume
                            </a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Index", "Bookmarks")" class="text-decoration-none text-dark">
                                <i class="bi bi-bookmark me-2"></i> Bookmarked Jobs
                            </a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Index", "Applications")" class="text-decoration-none text-dark">
                                <i class="bi bi-briefcase me-2"></i> Applied Jobs
                            </a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("ChangePassword", "Account")" class="text-decoration-none text-dark">
                                <i class="bi bi-lock me-2"></i> Change Password
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <!-- Resume Upload Section -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Resume File</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ResumePath))
                    {
                        <div class="alert alert-success mb-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="bi bi-file-earmark-text fs-4 me-2"></i>
                                    <span>Your resume is uploaded and ready to be used for job applications.</span>
                                </div>
                                <div>
                                    <a href="@Model.ResumePath" target="_blank" class="btn btn-outline-primary me-2">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <form asp-action="Delete" asp-controller="Resume" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-4">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            You haven't uploaded your resume yet. Please upload your resume to apply for jobs.
                        </div>
                    }

                    <form asp-action="Upload" asp-controller="Resume" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="resume" class="form-label">Upload Resume</label>
                            <input type="file" class="form-control" id="resume" name="resume" accept=".pdf,.doc,.docx">
                            <div class="form-text">Accepted formats: PDF, DOC, DOCX (Max size: 3MB)</div>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-upload"></i> Upload Resume
                        </button>
                    </form>
                </div>
            </div>

            <!-- Resume Details Section -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Professional Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateProfessionalInfo" asp-controller="Resume" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Work Experience -->
                        <h5 class="mt-4 mb-3"><i class="bi bi-briefcase me-2"></i>Work Experience</h5>
                        <div id="work-experience-container">
                            <div class="work-experience-item mb-4 pb-4 border-bottom">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Job Title</label>
                                            <input type="text" class="form-control" name="WorkExperiences[0].Title" placeholder="e.g. Software Developer">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Company Name</label>
                                            <input type="text" class="form-control" name="WorkExperiences[0].Company" placeholder="e.g. Microsoft">
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Start Date</label>
                                            <input type="date" class="form-control" name="WorkExperiences[0].StartDate">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">End Date</label>
                                            <input type="date" class="form-control" name="WorkExperiences[0].EndDate">
                                            <div class="form-check mt-2">
                                                <input class="form-check-input" type="checkbox" id="currentJob0" name="WorkExperiences[0].IsCurrent">
                                                <label class="form-check-label" for="currentJob0">
                                                    I currently work here
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <textarea class="form-control" name="WorkExperiences[0].Description" rows="3" placeholder="Describe your responsibilities and achievements"></textarea>
                                </div>
                            </div>
                        </div>
                        <button type="button" id="add-work-experience" class="btn btn-outline-secondary mb-4">
                            <i class="bi bi-plus-circle me-2"></i>Add Another Work Experience
                        </button>

                        <!-- Education -->
                        <h5 class="mt-4 mb-3"><i class="bi bi-mortarboard me-2"></i>Education</h5>
                        <div id="education-container">
                            <div class="education-item mb-4 pb-4 border-bottom">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Degree</label>
                                            <input type="text" class="form-control" name="Educations[0].Degree" placeholder="e.g. Bachelor of Science">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Institution</label>
                                            <input type="text" class="form-control" name="Educations[0].Institution" placeholder="e.g. Harvard University">
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Start Date</label>
                                            <input type="date" class="form-control" name="Educations[0].StartDate">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">End Date</label>
                                            <input type="date" class="form-control" name="Educations[0].EndDate">
                                            <div class="form-check mt-2">
                                                <input class="form-check-input" type="checkbox" id="currentEducation0" name="Educations[0].IsCurrent">
                                                <label class="form-check-label" for="currentEducation0">
                                                    I am currently studying here
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Field of Study</label>
                                    <input type="text" class="form-control" name="Educations[0].FieldOfStudy" placeholder="e.g. Computer Science">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <textarea class="form-control" name="Educations[0].Description" rows="3" placeholder="Additional information about your education"></textarea>
                                </div>
                            </div>
                        </div>
                        <button type="button" id="add-education" class="btn btn-outline-secondary mb-4">
                            <i class="bi bi-plus-circle me-2"></i>Add Another Education
                        </button>

                        <!-- Skills -->
                        <h5 class="mt-4 mb-3"><i class="bi bi-lightning me-2"></i>Skills</h5>
                        <div class="mb-3">
                            <label class="form-label">Professional Skills</label>
                            <input type="text" class="form-control" id="skills" name="Skills" placeholder="e.g. JavaScript, React, Node.js (separate with commas)">
                            <div class="form-text">Enter your professional skills separated by commas</div>
                        </div>

                        <!-- Languages -->
                        <h5 class="mt-4 mb-3"><i class="bi bi-translate me-2"></i>Languages</h5>
                        <div id="languages-container">
                            <div class="language-item mb-3 row">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" name="Languages[0].Name" placeholder="e.g. English">
                                </div>
                                <div class="col-md-6">
                                    <select class="form-select" name="Languages[0].Level">
                                        <option value="">Select proficiency level</option>
                                        <option value="Native">Native</option>
                                        <option value="Fluent">Fluent</option>
                                        <option value="Advanced">Advanced</option>
                                        <option value="Intermediate">Intermediate</option>
                                        <option value="Basic">Basic</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <button type="button" id="add-language" class="btn btn-outline-secondary mb-4">
                            <i class="bi bi-plus-circle me-2"></i>Add Another Language
                        </button>

                        <!-- Additional Information -->
                        <h5 class="mt-4 mb-3"><i class="bi bi-info-circle me-2"></i>Additional Information</h5>
                        <div class="mb-3">
                            <label class="form-label">Professional Summary</label>
                            <textarea class="form-control" name="ProfessionalSummary" rows="4" placeholder="Write a brief summary of your professional background, goals, and what makes you unique."></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Certifications</label>
                            <textarea class="form-control" name="Certifications" rows="3" placeholder="List any relevant certifications you have achieved."></textarea>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>Save Resume Information
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Work Experience Add Functionality
        let workExperienceCount = 1;
        document.getElementById('add-work-experience').addEventListener('click', function() {
            const container = document.getElementById('work-experience-container');
            const newItem = document.createElement('div');
            newItem.className = 'work-experience-item mb-4 pb-4 border-bottom';
            newItem.innerHTML = `
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Job Title</label>
                            <input type="text" class="form-control" name="WorkExperiences[${workExperienceCount}].Title" placeholder="e.g. Software Developer">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Company Name</label>
                            <input type="text" class="form-control" name="WorkExperiences[${workExperienceCount}].Company" placeholder="e.g. Microsoft">
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Start Date</label>
                            <input type="date" class="form-control" name="WorkExperiences[${workExperienceCount}].StartDate">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">End Date</label>
                            <input type="date" class="form-control" name="WorkExperiences[${workExperienceCount}].EndDate">
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" id="currentJob${workExperienceCount}" name="WorkExperiences[${workExperienceCount}].IsCurrent">
                                <label class="form-check-label" for="currentJob${workExperienceCount}">
                                    I currently work here
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" name="WorkExperiences[${workExperienceCount}].Description" rows="3" placeholder="Describe your responsibilities and achievements"></textarea>
                </div>
                <button type="button" class="btn btn-outline-danger remove-work-experience">
                    <i class="bi bi-trash me-2"></i>Remove
                </button>
            `;
            container.appendChild(newItem);

            // Add event listener to the remove button
            newItem.querySelector('.remove-work-experience').addEventListener('click', function() {
                container.removeChild(newItem);
            });

            workExperienceCount++;
        });

        // Education Add Functionality
        let educationCount = 1;
        document.getElementById('add-education').addEventListener('click', function() {
            const container = document.getElementById('education-container');
            const newItem = document.createElement('div');
            newItem.className = 'education-item mb-4 pb-4 border-bottom';
            newItem.innerHTML = `
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Degree</label>
                            <input type="text" class="form-control" name="Educations[${educationCount}].Degree" placeholder="e.g. Bachelor of Science">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Institution</label>
                            <input type="text" class="form-control" name="Educations[${educationCount}].Institution" placeholder="e.g. Harvard University">
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Start Date</label>
                            <input type="date" class="form-control" name="Educations[${educationCount}].StartDate">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">End Date</label>
                            <input type="date" class="form-control" name="Educations[${educationCount}].EndDate">
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" id="currentEducation${educationCount}" name="Educations[${educationCount}].IsCurrent">
                                <label class="form-check-label" for="currentEducation${educationCount}">
                                    I am currently studying here
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Field of Study</label>
                    <input type="text" class="form-control" name="Educations[${educationCount}].FieldOfStudy" placeholder="e.g. Computer Science">
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" name="Educations[${educationCount}].Description" rows="3" placeholder="Additional information about your education"></textarea>
                </div>
                <button type="button" class="btn btn-outline-danger remove-education">
                    <i class="bi bi-trash me-2"></i>Remove
                </button>
            `;
            container.appendChild(newItem);

            // Add event listener to the remove button
            newItem.querySelector('.remove-education').addEventListener('click', function() {
                container.removeChild(newItem);
            });

            educationCount++;
        });

        // Languages Add Functionality
        let languageCount = 1;
        document.getElementById('add-language').addEventListener('click', function() {
            const container = document.getElementById('languages-container');
            const newItem = document.createElement('div');
            newItem.className = 'language-item mb-3 row';
            newItem.innerHTML = `
                <div class="col-md-5">
                    <input type="text" class="form-control" name="Languages[${languageCount}].Name" placeholder="e.g. Spanish">
                </div>
                <div class="col-md-5">
                    <select class="form-select" name="Languages[${languageCount}].Level">
                        <option value="">Select proficiency level</option>
                        <option value="Native">Native</option>
                        <option value="Fluent">Fluent</option>
                        <option value="Advanced">Advanced</option>
                        <option value="Intermediate">Intermediate</option>
                        <option value="Basic">Basic</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-outline-danger remove-language">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            `;
            container.appendChild(newItem);

            // Add event listener to the remove button
            newItem.querySelector('.remove-language').addEventListener('click', function() {
                container.removeChild(newItem);
            });

            languageCount++;
        });

        // Toggle end date field when "current" checkbox is clicked
        document.addEventListener('change', function(e) {
            if (e.target && e.target.type === 'checkbox' && (e.target.id.startsWith('currentJob') || e.target.id.startsWith('currentEducation'))) {
                const endDateInput = e.target.closest('.mb-3').querySelector('input[type="date"]');
                if (endDateInput) {
                    endDateInput.disabled = e.target.checked;
                    if (e.target.checked) {
                        endDateInput.value = '';
                    }
                }
            }
        });
    </script>
}
