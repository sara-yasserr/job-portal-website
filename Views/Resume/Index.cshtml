@model Job_Portal_Project.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container mt-5">
   <div class="row">
        <div class="col-lg-3">
            <!-- Resume Sidebar -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Resume Options</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Index", "Profile")" class="text-decoration-none text-dark">
                                <i class="bi bi-person me-2"></i> My Profile
                            </a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center active">
                            <a href="@Url.Action("Index", "Resume")" class="text-decoration-none text-white">
                                <i class="bi bi-file-earmark-text me-2"></i> My Resume
                            </a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Index", "Bookmarks")" class="text-decoration-none text-dark">
                                <i class="bi bi-bookmark me-2"></i> Bookmarked Jobs
                            </a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Index", "Applications")" class="text-decoration-none text-dark">
                                <i class="bi bi-briefcase me-2"></i> Applied Jobs
                            </a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("ChangePassword", "Account")" class="text-decoration-none text-dark">
                                <i class="bi bi-lock me-2"></i> Change Password
                            </a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Logout", "Account")" class="text-decoration-none text-dark">
                                <i class="bi bi-lock me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <!-- Resume Upload Section -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Resume File</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ResumePath))
                    {
                        <div class="alert alert-success mb-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="bi bi-file-earmark-text fs-4 me-2"></i>
                                    <span>Your resume is uploaded and ready to be used for job applications.</span>
                                </div>
                                <div>
                                    <a href="@Model.ResumePath" target="_blank" class="btn btn-outline-primary me-2">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <form asp-action="Delete" asp-controller="Resume" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-4">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            You haven't uploaded your resume yet. Please upload your resume to apply for jobs.
                        </div>
                    }

                    <form asp-action="Upload" asp-controller="Resume" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="resume" class="form-label">Upload Resume</label>
                            <input type="file" class="form-control" id="resume" name="resume" accept=".pdf,.doc,.docx">
                            <div class="form-text">Accepted formats: PDF, DOC, DOCX (Max size: 3MB)</div>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-upload"></i> Upload Resume
                        </button>
                    </form>
                </div>
            </div>

          
          
        </div>
    </div>
</div>

