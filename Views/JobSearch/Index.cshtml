                        <span>@ViewBag.NoResultsMessage</span>
                    </div>
                }

                <!-- Jobs Found Header -->
                <div class="jobs-header" style="background: linear-gradient(135deg, #00BCD4 0%, #00838F 100%); border-radius: 12px; padding: 20px 25px; margin-bottom: 25px; display: flex; justify-content: space-between; align-items: center; box-shadow: 0 5px 15px rgba(0, 188, 212, 0.2);">
                    <div class="d-flex align-items-center">
                        <i class="lni lni-briefcase" style="font-size: 26px; color: #fff; margin-right: 15px;"></i>
                        <div>
                            <h4 style="color: #fff; font-size: 20px; margin-bottom: 0; font-weight: 600;">@Model.TotalJobs Jobs Found</h4>
                            @* <p style="color: rgba(255, 255, 255, 0.8); margin: 0; font-size: 14px;">Showing page @Model.CurrentPage of @Model.TotalPages</p> *@
                        </div>
                    </div>
                </div>

                <!-- Job Listings -->
                <div id="jobListingsContainer">
                    @await Html.PartialAsync("_JobListPartial", Model.Jobs)
                </div>
            </div>
        </div>
    </div>
</div>
