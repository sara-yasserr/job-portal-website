                                {
                                    <option value="@category.Id" selected="@(Model.CategoryId == category.Id)">@category.Name</option>
                                }
                            </select>
                        </div>

                        <!-- Job Type -->
                        <!-- Replace the Job Type filter section with this -->
                        <div class="filter-group" style="margin-bottom: 25px;">
                            <label style="display: block; margin-bottom: 14px; font-weight: 600; color: #333; font-size: 15px; position: relative; padding-left: 15px; border-left: 3px solid #00BCD4;">
                                <i class="lni lni-timer" style="margin-right: 8px; color: #00BCD4;"></i>
                                Job Type
                            </label>
