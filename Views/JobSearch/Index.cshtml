                        </div>
                        <div style="display: flex; justify-content: space-between; padding: 10px; background: #f9f9f9; border-radius: 6px;">
                            <span style="font-weight: 500; color: #555;">Top Category:</span>
                            <span style="font-weight: 600; color: #00BCD4;">IT & Software</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; padding: 10px; background: #f9f9f9; border-radius: 6px;">
                            <span style="font-weight: 500; color: #555;">Popular Location:</span>
                            <span style="font-weight: 600; color: #00BCD4;">Remote</span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Job Filter Section End -->
            <!-- Right content - Job Listings -->
            <div class="col-xl-8 col-lg-8 col-md-7">
                @if (!string.IsNullOrEmpty(ViewBag.NoResultsMessage))
                {
                    <div class="alert alert-info" style="border-radius: 8px; border-left: 4px solid #00BCD4; background-color: rgba(0, 188, 212, 0.1); padding: 15px 20px; display: flex; align-items: center;">
