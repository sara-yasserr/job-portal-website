                                <path d=\"M0 0l6 6 6-6z\" fill=\"%2300BCD4\" /></svg>'); background-repeat: no-repeat; background-position: right 15px center; transition: all 0.3s ease;">
                                <option value="">Anywhere</option>
                                @foreach (var location in Model.Locations)
                                {
                                    <option value="@location" selected="@(Model.Location == location)">@location</option>
                                }
                            </select>
                        </div>

                        <!-- Experience -->
                        <!-- Replace the Experience Level filter section with this -->
                        <div class="filter-group" style="margin-bottom: 25px;">
                            <label style="display: block; margin-bottom: 14px; font-weight: 600; color: #333; font-size: 15px; position: relative; padding-left: 15px; border-left: 3px solid #00BCD4;">
                                <i class="lni lni-graduation" style="margin-right: 8px; color: #00BCD4;"></i>
                                Experience Level
                            </label>
                            <div class="checkbox-container" style="display: flex; flex-direction: column; gap: 12px;">
                                @foreach (var level in Model.ExperienceLevels)
                                {
                                    <div class="form-check" style="display: flex; align-items: center;">
                                        <input class="form-check-input" type="checkbox"
