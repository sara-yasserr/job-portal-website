@section Scripts {
    <script>
        $(document).ready(function() {
            // Load filters from URL when page loads
            loadFiltersFromUrl();

            // Apply filters if URL has parameters
            if (window.location.search) {
                const page = new URLSearchParams(window.location.search).get('page') || 1;
                applyFilters(page);
            }

            // Apply filters button click
            $('#applyFilters').click(function() {
                applyFilters(1); // Reset to page 1 when applying new filters
            });

            // Pagination click handler
            $(document).on('click', '.page-link', function(e) {
                e.preventDefault();
                var page = $(this).data('page');
                if (page) {
                    applyFilters(page);
                }
            });

            // Clear All Filters button
            $('#clearAllFilters').click(function() {
                // Reset all input fields
                $('#keyword').val('');
                $('#category').val('');
                $('#location').val('');

                // Uncheck all checkboxes
                $('input[name="employmentType"]').prop('checked', false);
                $('input[name="experienceLevel"]').prop('checked', false);

                // Load default jobs without filters
                loadDefaultJobs();
            });

            // Function to load filters from URL parameters
            function loadFiltersFromUrl() {
                const params = new URLSearchParams(window.location.search);

                if (params.has('keyword')) $('#keyword').val(params.get('keyword'));
                if (params.has('categoryId')) $('#category').val(params.get('categoryId'));
                if (params.has('location')) $('#location').val(params.get('location'));

                if (params.has('employmentType')) {
                    const types = params.get('employmentType').split(',');
                    types.forEach(type => {
                        $(`input[name="employmentType"][value="${type}"]`).prop('checked', true);
                    });
                }

                if (params.has('experienceLevel')) {
                    const levels = params.get('experienceLevel').split(',');
                    levels.forEach(level => {
                        $(`input[name="experienceLevel"][value="${level}"]`).prop('checked', true);
                    });
                }
            }

            // Function to load default jobs (no filters)
            function loadDefaultJobs() {
                // Show loading indicator
                $('#jobListingsContainer').html('<div class="text-center py-5"><i class="lni lni-spinner-arrow spin" style="font-size: 40px; color: #00BCD4;"></i></div>');

                $.ajax({
                    url: '@Url.Action("Search", "JobSearch")',
                    type: 'POST',
                    data: {
                        currentPage: 1,
                        pageSize: @Model.PageSize
                    },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(result) {
                        $('#jobListingsContainer').html(result);
                        // Reset URL to initial state
                        history.pushState(null, '', window.location.pathname);
                    },
                    error: function(xhr, status, error) {
                        console.error("Error loading default jobs:", error);
                        $('#jobListingsContainer').html('<div class="alert alert-danger">Error loading jobs. Please try again.</div>');
                    }
                });
            }

            // Main function to apply filters
            function applyFilters(page = 1) {
                // Show loading indicator
                $('#jobListingsContainer').html('<div class="text-center py-5"><i class="lni lni-spinner-arrow spin" style="font-size: 40px; color: #00BCD4;"></i></div>');

                // Get all checked employment types
                var employmentTypes = [];
                $('input[name="employmentType"]:checked').each(function() {
                    employmentTypes.push($(this).val());
                });

                // Get all checked experience levels
                var experienceLevels = [];
                $('input[name="experienceLevel"]:checked').each(function() {
                    experienceLevels.push($(this).val());
                });

                // Prepare filters object
                var filters = {
                    keyword: $('#keyword').val(),
                    categoryId: $('#category').val(),
                    location: $('#location').val(),
                    employmentType: employmentTypes.join(','),
                    experienceLevel: experienceLevels.join(','),
                    currentPage: page,
                    pageSize: @Model.PageSize
                };

                // AJAX call to get filtered jobs
                $.ajax({
                    url: '@Url.Action("Search", "JobSearch")',
                    type: 'POST',
                    data: filters,
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(result) {
                        $('#jobListingsContainer').html(result);
                        updateUrl(filters, page);
                    },
                    error: function(xhr, status, error) {
                        console.error("Error applying filters:", error);
                        $('#jobListingsContainer').html('<div class="alert alert-danger">Error loading jobs. Please try again.</div>');
                    }
                });
            }

            // Function to update URL with current filters
            function updateUrl(filters, currentPage) {
                var params = new URLSearchParams();

                if (filters.keyword) params.append('keyword', filters.keyword);
                if (filters.categoryId) params.append('categoryId', filters.categoryId);
                if (filters.location) params.append('location', filters.location);
                if (filters.employmentType) params.append('employmentType', filters.employmentType);
                if (filters.experienceLevel) params.append('experienceLevel', filters.experienceLevel);
                params.append('page', currentPage);

                var newUrl = window.location.pathname + '?' + params.toString();
                history.pushState(null, '', newUrl);
            }
        });
