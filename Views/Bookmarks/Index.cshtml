            align-items: center;
            margin-bottom: 20px;
        }

        .company-logo-container {
            margin-right: 18px;
            flex-shrink: 0;
        }

        .company-logo {
            width: 70px;
            height: 70px;
            border-radius: 12px;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f6f9fc;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
            border: 1px solid #ebeef5;
        }

            .company-logo img {
                width: 100%;
                height: 100%;
                object-fit: contain;
                padding: 10px;
            }

        .default-logo {
