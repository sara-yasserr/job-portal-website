            align-items: center;
            justify-content: center;
            min-width: 40px;
            height: 40px;
            margin: 0 5px;
            padding: 0 15px;
            background-color: #fff;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            color: #495057;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .pagination-item.active {
                background-color: #00BCD4;
                border-color: #00BCD4;
                color: white;
                box-shadow: 0 3px 10px rgba(0, 188, 212, 0.3);
            }

            .pagination-item:hover:not(.active) {
                background-color: #f8f9fa;
                border-color: #ced4da;
                color: #00BCD4;
            }

            .pagination-item.prev, .pagination-item.next {
                padding: 0 15px;
            }

            .pagination-item i {
                font-size: 12px;
            }

            .pagination-item.prev i {
                margin-right: 5px;
            }

            .pagination-item.next i {
                margin-left: 5px;
            }

        /* Empty State */
        .no-bookmarks {
            padding: 60px 30px;
            text-align: center;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        }

        .empty-state-icon {
            width: 100px;
            height: 100px;
            background-color: rgba(0, 188, 212, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
        }

            .empty-state-icon i {
                font-size: 45px;
                color: #00BCD4;
            }

        .no-bookmarks h4 {
            font-size: 24px;
            font-weight: 600;
            color: #343a40;
            margin-bottom: 15px;
        }

        .no-bookmarks p {
            color: #6c757d;
            font-size: 16px;
            max-width: 500px;
            margin: 0 auto 25px;
        }

        .browse-jobs-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 12px 30px;
            background: linear-gradient(135deg, #00BCD4 0%, #00ACC1 100%);
            color: white;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(0, 188, 212, 0.3);
        }

            .browse-jobs-btn:hover {
                background: linear-gradient(135deg, #00ACC1 0%, #0097A7 100%);
                transform: translateY(-3px);
                box-shadow: 0 6px 15px rgba(0, 188, 212, 0.4);
                color: white;
            }

            .browse-jobs-btn i {
                margin-right: 8px;
                font-size: 18px;
            }

        /* Responsive Styles */
        @@media (max-width: 767px) {
            .job-header {
                flex-direction: column;
                text-align: center;
            }

            .company-logo-container {
                margin-right: 0;
                margin-bottom: 15px;
            }

            .job-meta-tags {
                justify-content: center;
            }

            .job-actions {
                flex-direction: column;
            }

            .view-details-btn, .apply-btn {
                width: 100%;
                margin-bottom: 10px;
            }

            .pagination-item {
                min-width: 35px;
                height: 35px;
                margin: 0 3px;
                padding: 0 10px;
                font-size: 14px;
            }

                .pagination-item.prev span, .pagination-item.next span {
                    display: none;
                }
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Enable tooltips if using Bootstrap
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        $(document).on('submit', 'form', function(e) {
            e.preventDefault();
            var form = $(this);
            var button = form.find('button');
            var jobId = form.find('input[name="jobId"]').val();

            // Show loading
            button.html('<i class="lni lni-spinner lni-spin icon-heart"></i> <span class="btn-text">Processing...</span>');
            button.prop('disabled', true);

            $.ajax({
                url: form.attr('action'),
                type: 'POST',
                data: form.serialize(),
                success: function(response) {
                    // Remove the entire bookmark card
                    form.closest('.bookmark-card').fadeOut(300, function() {
                        $(this).remove();
                        // Update the saved jobs counter
                        var counter = $('.saved-counter span span');
                        var currentCount = parseInt(counter.text());
                        counter.text(currentCount - 1);
                        
                        // If no more bookmarks, show empty state
                        if (currentCount - 1 === 0) {
                            $('.mainContent').html(`
                                <div class="text-center no-bookmarks py-5">
                                    <div class="empty-state-icon">
                                        <i class="lni lni-bookmark"></i>
                                    </div>
                                    <h4>No bookmarked jobs</h4>
                                    <p class="text-muted">Start browsing jobs and bookmark the ones you're interested in!</p>
                                    <a href="/JobSearch" class="browse-jobs-btn">
                                        <i class="lni lni-search"></i>
                                        <span>Browse Jobs</span>
                                    </a>
                                </div>
                            `);
                        }
                    });
                },
                error: function(xhr, status, error) {
                    console.error(error);
                    alert('Something went wrong. Please try again.');
                    button.html('<i class="lni lni-heart-filled icon-heart"></i> <span class="btn-text">Saved</span>');
                },
                complete: function() {
                    button.prop('disabled', false);
                }
            });
        });
    </script>
}