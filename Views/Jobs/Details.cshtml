@model Job_Portal_Project.Models.Job
@{
    ViewData["Title"] = "Job Details";
    Layout = "_MyLayout";
}


<style>
    
    body {
        font-family: 'Arial', 'Helvetica', sans-serif;
    }

    h2 {
        font-family: 'Roboto', sans-serif;
        font-weight: bold;
        color: #17a2b8; 
        margin-bottom: 60px; 
        font-size:30px;
    }

    p, strong {
        font-size: 16px;
        color: #4A4A4A;
    }

    strong {
        font-size: 18px;
        color: #0056b3; 
    }

    .badge.bg-info {
        background-color: #17a2b8 !important;
        font-weight: bold;
    }

    .badge.bg-dark {
        background-color: #343a40 !important;
        font-weight: bold;
    }

    .badge.bg-warning {
        background-color: #ffc107 !important;
        color: #212529 !important;
        font-weight: bold;
    }

    .badge.bg-success {
        background-color: #28a745 !important;
        font-weight: bold;
    }

    .badge.bg-danger {
        background-color: #dc3545 !important;
        font-weight: bold;
    }

    
    .btn {
        border-radius: 5px;
        font-size: 1rem;
    }

    .btn-info {
        background-color: #17a2b8 !important;
        border: none;
    }

    .btn-outline-secondary {
        color: #6c757d;
        border-color: #6c757d;
        font-weight: bold;
    }

    
    .shadow-lg {
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2) !important;
    }

   
    .row .col {
        margin-bottom: 15px; 
    }
</style>

<div class="container d-flex justify-content-center align-items-center mt-5 pt-5 mb-5">
    <div class="bg-white shadow-lg rounded-4 p-5" style="max-width: 800px; width: 100%; border: 1px solid #ddd;">
        <h2 class="text-center fw-bold">Job Details</h2>

        <div class="row row-cols-1 row-cols-md-2 gy-4 text-dark fs-6">
            <div class="col">
                <strong>Title:</strong>
                <p class="text-muted fw-medium">@Model.Title</p>
            </div>
            <div class="col">
                <strong>Company:</strong>
                <p class="text-muted fw-medium">@Model.Company?.Name</p>
            </div>
            <div class="col">
                <strong>Category:</strong>
                <p class="text-muted fw-medium">@Model.JobCategory?.Name</p>
            </div>
            <div class="col">
                <strong>Employment Type:</strong>
                <span class="badge bg-info text-white px-3 py-2">@Model.EmploymentType</span>
            </div>
            <div class="col">
                <strong>Work Mode:</strong>
                <span class="badge bg-dark text-white px-3 py-2">@Model.WorkMode</span>
            </div>
            <div class="col">
                <strong>Experience Level:</strong>
                <span class="badge bg-warning text-dark px-3 py-2">@Model.ExperienceLevel</span>
            </div>
            <div class="col">
                <strong>City:</strong>
                <p class="text-muted fw-medium">@Model.City</p>
            </div>
            <div class="col">
                <strong>Country:</strong>
                <p class="text-muted fw-medium">@Model.Country</p>
            </div>
            <div class="col-12">
                <strong>Description:</strong>
                <p class="text-muted fw-medium text-justify" style="line-height: 1.5;">@Model.Description</p>
            </div>
            <div class="col">
                <strong>Date Posted:</strong>
                <p class="text-muted fw-medium">@Model.DatePosted.ToString("MMMM dd, yyyy")</p>
            </div>
            <div class="col">
                <strong>Vacancies:</strong>
                <p class="text-muted fw-medium">@Model.VacancyCount</p>
            </div>
        </div>

        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-5 gap-3">
            <a asp-action="Index" class="btn btn-outline-secondary px-4">← Back</a>

            <span class="badge px-3 py-2 @(Model.IsActive ? "bg-success" : "bg-danger")">
                @(Model.IsActive ? "Active" : "Closed")
            </span>

            <a asp-controller="JobApplication" asp-action="ShowAllApplicants" asp-route-jobId="@Model.Id" class="btn btn-info text-white">
                <i class="fas fa-users"></i> View Applicants
            </a>
        </div>
    </div>
</div>


        <div class="row mt-3">
            <div class="col-md-6">
                <strong>Date Posted:</strong>
                <p class="text-muted">@Model.DatePosted.ToString("MMMM dd, yyyy")</p>
            </div>
            <div class="col-md-6">
                <strong>Vacancies:</strong>
                <p class="text-muted">@Model.VacancyCount</p>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary px-4">← Back</a>

            @if (Model.IsActive)
            {
                <span class="badge bg-success px-3 py-2">Active</span>
            }
            else
            {
                <span class="badge bg-danger px-3 py-2">Closed</span>
            }
            <a asp-controller="JobApplication" asp-action="ShowAllApplicants" asp-route-jobId="@Model.Id" class="btn btn-info">
                <i class="fas fa-users"></i> View Applicants
            </a>
        </div>
    </div>
</div>
