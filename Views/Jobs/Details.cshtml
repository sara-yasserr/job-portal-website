@model Job_Portal_Project.Models.Job
@{
    ViewData["Title"] = "Job Details";
    Layout = "_MyLayout";
}

<div class="container mt-5 pt-5 mb-5 px-4 px-md-5">
    <div class="bg-white shadow rounded p-4 p-md-5">
        <h2 class="text-center text-primary fw-bold mb-4">Job Details</h2>

        <div class="row gy-3">
            <div class="col-md-6">
                <strong>Title:</strong>
                <p class="text-muted">@Model.Title</p>
            </div>d
            <div class="col-md-6">
                <strong>Company:</strong>
                <p class="text-muted">@Model.Company?.Name</p>
            </div>
            <div class="col-md-6">
                <strong>Category:</strong>
                <p class="text-muted">@Model.JobCategory?.Name</p>
            </div>
            <div class="col-md-6">
                <strong>Employment Type:</strong>
                <span class="badge bg-info text-white px-3 py-2">@Model.EmploymentType</span>
            </div>
            <div class="col-md-6">
                <strong>Work Mode:</strong>
                <span class="badge bg-dark px-3 py-2">@Model.WorkMode</span>
            </div>
            <div class="col-md-6">
                <strong>Experience Level:</strong>
                <span class="badge bg-warning text-dark px-3 py-2">@Model.ExperienceLevel</span>
            </div>
            <div class="col-md-6">
                <strong>City:</strong>
                <p class="text-muted">@Model.City</p>
            </div>
            <div class="col-md-6">
                <strong>Country:</strong>
                <p class="text-muted">@Model.Country</p>
            </div>
        </div>

        <div class="mt-4">
            <strong>Description:</strong>
            <p class="text-muted">@Model.Description</p>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <strong>Date Posted:</strong>
                <p class="text-muted">@Model.DatePosted.ToString("MMMM dd, yyyy")</p>
            </div>
            <div class="col-md-6">
                <strong>Vacancies:</strong>
                <p class="text-muted">@Model.VacancyCount</p>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary px-4">← Back</a>

            @if (Model.IsActive)
            {
                <span class="badge bg-success px-3 py-2">Active</span>
            }
            else
            {
                <span class="badge bg-danger px-3 py-2">Closed</span>
            }
            <a asp-controller="JobApplication" asp-action="ShowAllApplicants" asp-route-jobId="@Model.Id" class="btn btn-info">
                <i class="fas fa-users"></i> View Applicants
            </a>
        </div>
    </div>
</div>
