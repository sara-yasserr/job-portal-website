@using Job_Portal_Project.ViewModels;
@model JobFilterViewModel;
@{
    Layout = "_MyLayout";
    ViewData["Title"] = "Index";
}


<style>
    .job-row:nth-child(even) {
        background-color: #343a40;
    }

    .job-row:nth-child(odd) {
        background-color: #ffffff; 
    }

    .job-row td {
        vertical-align: middle;
        padding: 10px 8px;
    }

    .table td .btn {
        min-width: 70px;
    }

    .table {
        font-size: 0.95rem;
    }

    .btn-edit {
        background-color: #0d6efd;
        color: #fff;
        border: none;
        padding: 5px 12px;
        font-size: 14px;
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .btn-delete {
        background-color: #dc3545;
        color: #fff;
        border: none;
        padding: 3px 10px;
        font-size: 12px;
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }


    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        flex-wrap: wrap;
    }

   .action-buttons .btn i {
     font-size: 14px;
   }
</style>


<div class="container py-4 mt-5 mb-4">
    <h2 class="text-center mb-4">Available Jobs</h2>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="row g-2 mb-3">
            <div class="col-md">
                <input type="text" name="title" value="@Model.Title" class="form-control" placeholder="Search by Title" />
            </div>
            <div class="col-md">
                <input type="text" name="companyName" value="@Model.CompanyName" class="form-control" placeholder="Search by Company" />
            </div>
            <div class="col-md">
                <select name="categoryId" class="form-control">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id" selected="@(Model.CategoryId == category.Id ? "selected" : null)">
                            @category.Name
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-auto d-flex gap-2">
                <button type="submit" class="btn btn-info text-white">Filter</button>
                <a asp-action="Index" class="btn btn-info text-white">Reset</a>
            </div>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Company</th>
                    <th>Category</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Employment</th>
                    <th>Work Mode</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in Model.Jobs)
                {
                    <tr class="job-row">
                        <td>@job.Title</td>
                        <td>@job.Company?.Name</td>
                        <td>@job.JobCategory?.Name</td>
                        <td>@job.City</td>
                        <td>@job.Country</td>
                        <td>@job.EmploymentType</td>
                        <td>@job.WorkMode</td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@job.Id" class="btn btn-edit">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@job.Id" class="btn btn-delete">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>







































